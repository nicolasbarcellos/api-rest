{
  "compilerOptions": {
    // Output
    "outDir": "./dist",
    "rootDir": "./src",
    // Module System (CommonJS para produção)
    "module": "es2022",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "node",
    // Type Checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Other
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}